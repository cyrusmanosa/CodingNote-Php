{% extends 'base.html.twig' %}

{% block body %}

    <h1>Product</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Desciption</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ product.size }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Edit</a>
    <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-primary">Delete</a>
{% endblock %}
